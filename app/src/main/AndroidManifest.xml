<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="no.uib.info331">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SplashActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>
        <activity android:name=".activities.RegisterUserActivity"/>
        <activity android:name=".activities.CreateJoinGroupActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            />
        <activity android:name=".activities.GroupProfileActivity"
            android:theme="@style/AppThemeTranspStatusBar" />
            />
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:noHistory="true">
            >
        </activity>
        <activity android:name=".activities.ActiveGroupsList" />
        <activity
            android:name=".activities.UserProfileActivity"
            android:theme="@style/AppThemeTranspStatusBar" />
        <activity android:name=".activities.DashboardActivity" />
    </application>

</manifest>
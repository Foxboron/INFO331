<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:id="@+id/listContent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"

        >

        <TextView
            android:id="@+id/textview_event_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:text="Event for: Group NAME"
            android:fontFamily="sans-serif-light"
            android:textSize="20sp"
            android:layout_toEndOf="@id/imageview_beacon_list"
            />
        <TextView
            android:id="@+id/textview_enter_exit_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:text="Type of event: ENTER|EXIT"
            android:fontFamily="sans-serif-light"
            android:textSize="12sp"
            android:layout_below="@id/textview_event_group"
            android:layout_toEndOf="@id/imageview_beacon_list"
            />
        <TextView
            android:id="@+id/textview_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:text="Mon 00:00 01/01/1970"
            android:fontFamily="sans-serif-light"
            android:textSize="12sp"
            android:layout_below="@id/textview_enter_exit_event"
            />
    </RelativeLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="no.uib.info331.CreateJoinGroupActivity"
    android:background="@color/colorPrimary"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    >
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >

<TextView
    android:id="@+id/text_create_join_group_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/wants_to"
    android:textSize="36sp"
    android:textColor="#fff"
    android:fontFamily="sans-serif-light"
    android:layout_marginBottom="48dp"
    />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/create_group_card"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            >

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/join_group_card"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardElevation="5dp"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wants_to"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/choose_action_card"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            android:elevation="100dp"
            app:cardElevation="10dp"
            >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
            <Button
                android:id="@+id/show_join_group"
                style="?android:textAppearanceSmall"
                android:layout_width="192dp"
                android:layout_height="36dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/button_colored"
                android:padding="8dp"
                android:text="@string/action_join_group"
                android:textColor="#fff"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/or"
                android:textSize="36sp"
                android:fontFamily="sans-serif-light"
                android:textAlignment="center"
                />

    <Button
        android:id="@+id/show_create_group"
        style="?android:textAppearanceSmall"
        android:layout_width="192dp"
        android:layout_height="36dp"
        android:background="@drawable/button_colored"
        android:padding="8dp"
        android:text="@string/action_create_group"
        android:textColor="#fff"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>

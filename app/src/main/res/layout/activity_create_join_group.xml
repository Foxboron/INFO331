<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="no.uib.info331.activities.CreateJoinGroupActivity"
    android:background="@color/colorPrimary"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    >
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/text_create_join_group_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wants_to"
            android:textSize="36sp"
            android:textColor="#fff"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="48dp"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/create_group_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="32dp"
                >
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:orientation="vertical"
                    >
                    <TextView
                        
                        android:id="@+id/create_group_card_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/action_create_group"
                        android:textSize="28sp"
                        android:fontFamily="sans-serif-light"
                        />
                    <TextView
                        android:id="@+id/create_group_card_members"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/members"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-light"
                        />
                    <com.pchmn.materialchips.ChipsInput
                        android:id="@+id/chips_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hint="Enter a name"
                        android:windowSoftInputMode="adjustResize|stateHidden"

                        />
                    <LinearLayout
                        android:id="@+id/add_group_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:focusableInTouchMode="true"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_group"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="@color/colorGray3"
                            />
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <EditText
                                android:id="@+id/create_group_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/create_group_name"
                                android:imeActionId="@+id/login"
                                android:imeActionLabel="@string/action_sign_in_short"
                                android:imeOptions="actionUnspecified"
                                android:inputType="textAutoComplete"
                                android:maxLines="1"
                                />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <View
                        android:id="@+id/divider1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray1"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"

                        />
                    <RelativeLayout
                        android:id="@+id/member_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:padding="4dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:visibility="gone"

                        >
                        <ImageView
                            android:id="@+id/persons_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_person_add"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="@color/colorGray3"
                            android:layout_centerVertical="true"
                            />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:text="@string/search_for_member"
                                android:textSize="16sp"
                                android:layout_toEndOf="@id/persons_icon"
                                android:layout_marginStart="4dp"
                                android:layout_centerVertical="true"


                                />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_arrow_right"
                            android:layout_marginBottom="8dp"
                            android:backgroundTint="@color/colorGray3"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"

                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/beacon_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:padding="4dp"
                        >

                        <ImageView
                            android:id="@+id/beacon_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/ic_bt_beacon"
                            android:backgroundTint="@color/colorGray3"
                            android:layout_centerVertical="true"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_marginStart="4dp"
                            android:layout_toEndOf="@id/beacon_icon"
                            android:text="@string/search_for_beacon"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"

                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/ic_arrow_right"
                            android:backgroundTint="@color/colorGray3"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>
                    <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray1"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"

                        />



                    <Button
                        android:id="@+id/register_account"
                        style="?android:borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:text="@string/create_the_group"
                        android:textColor="@color/colorAccent"
                        />
                </LinearLayout>
                </ScrollView>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/join_group_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="24dp"
                app:cardElevation="5dp"
                android:visibility="gone"

                >
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/activity_vertical_margin"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/action_join_group"
                            android:textSize="28sp"
                            android:fontFamily="sans-serif-light"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:focusableInTouchMode="true"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_search"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="8dp"
                                />
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                                <EditText
                                    android:id="@+id/join_search_group"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/search_for_group"
                                    android:imeActionId="@+id/login"
                                    android:imeActionLabel="@string/action_sign_in_short"
                                    android:imeOptions="actionUnspecified"
                                    android:inputType="textAutoComplete"
                                    android:maxLines="1"
                                    />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:id="@+id/choose_action_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:elevation="100dp"
                app:cardElevation="10dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"


                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/show_join_group"
                        style="?android:textAppearanceSmall"
                        android:layout_width="192dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="36dp"
                        android:background="@drawable/button_colored"
                        android:padding="8dp"
                        android:text="@string/action_join_group"
                        android:textColor="#fff"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/or"
                        android:textSize="36sp"
                        android:fontFamily="sans-serif-light"
                        android:textAlignment="center"
                        />

                    <Button
                        android:id="@+id/show_create_group"
                        style="?android:textAppearanceSmall"
                        android:layout_width="192dp"
                        android:layout_height="36dp"
                        android:background="@drawable/button_colored"
                        android:padding="8dp"
                        android:text="@string/action_create_group"
                        android:textColor="#fff"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>

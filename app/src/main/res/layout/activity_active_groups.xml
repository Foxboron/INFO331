<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:id="@+id/active_groups_activity"
    >
    <!--    I want this to match the "active groups" text except for it being expandable,
    revealing a hidden list of the groups the user is already a member of. Or maybe drop the
    whole thing in favor of having "my groups" in side bar instead

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mygroups_expand"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

    </ExpandableListView>

    -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/groups_active_list_title"
        android:textSize="36sp"
        android:textColor="#fff"
        android:fontFamily="sans-serif-light"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/choose_action_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="100dp"
        app:cardElevation="10dp">

        <ListView
            android:id="@+id/active_groups_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>

    </android.support.v7.widget.CardView>


</LinearLayout>
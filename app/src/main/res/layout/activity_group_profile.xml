<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:weightSum="1" >

    <ImageView
        android:id="@+id/group_profile_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/group_profile_pic"
        android:background="@color/cardview_light_background"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp" >

        <TextView
            android:id="@+id/group_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_name"
            android:textSize="35sp"
            android:textColor="@color/colorNavBar"
            android:textAllCaps="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <LinearLayout
            android:id="@+id/group_util"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_display_name"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:id="@+id/group_point_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="10dp"
                android:gravity="start"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:background="@color/colorPrimaryDark"
                >

                <TextView
                    android:id="@+id/pts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/points"
                    android:textSize="15sp"
                    android:textColor="#FFF" />

                <TextView
                    android:id="@+id/group_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/group_points_filler"
                    android:layout_toEndOf="@id/pts"
                    android:layout_marginStart="5dp"
                    android:textColor="#FFF" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/join_group_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"
                android:gravity="end"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:background="@color/colorAccent">

                <Button
                    android:id="@+id/join_g_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_join_group"
                    android:background="@color/colorAccent"
                    android:textColor="@color/cardview_light_background"
                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/header_member_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_util"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="@string/group_memberlist_header" />

        <ListView
            android:id="@+id/user_member_list"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_below="@id/header_member_list" />

    </RelativeLayout>
</RelativeLayout>